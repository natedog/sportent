



<% @stories.each do |story| %>
  <div class="story">
		
		<div class="details">

			<%= render :partial => "story", :locals => {:story=>story ,:dock=>false}%>

			
			<%= render :partial => "social_tag_cloud", :locals => {:story_tags=>story.story_tags}%>
			
			<div class="social_opinion">
				<p/>Opinions (<%=story.comments.count%>) : <% if story.comments.count > 0 %>
					<%=story.comments.last.opinion%>
					</p>
					<%=link_to "Have your Say", opinion_story_path(story)%> | <%=link_to "View All",  opinion_view_story_path(story)%>
					
				<% else%>
				
					<%=link_to "Be the first to have an Opinion", opinion_story_path(story)%> 	</p>
				<% end %>
				 
				</div>
			<div class="scorecastr">Pick the Score</div>
			
		</div>
		

		
				
		
 
<% end %>


<br />


<% content_for :sidebar do %>
	<h4>Popular Stories</h4>
		<% @popular_stories.each do |popular_story|%>
			<li><%=link_to popular_story.story.title, story_path(popular_story.story),:target=> "new"%></li>
		<% end %>
	
	<ul>
		
		
	</ul>
	
	<h4>Treding Topics</h4>
		<% @popular_tags.each do |popular_tag|%>
			<li><%=popular_tag.social_tag.name%></li>
		<% end %>
	<ul>
		
		
	</ul>
	
		
<% end %>
